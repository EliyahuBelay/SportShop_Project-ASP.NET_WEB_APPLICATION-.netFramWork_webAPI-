@using SportShop_Project.Models;
<link href="~/Content/CSS/Shirt/Shirt.css" rel="stylesheet" type="text/css">

<div class="h1_Shirt_page_container">
    <h1 class="h1_Shirt_page">@ViewBag.Title</h1>
</div>

<div>
    <button class="my_btn" onclick="location.href = '@Url.Action( "GetAllShirtTable","Shirt")'">Manager Use</button>
    <button class="my_btn" onclick="location.href = '@Url.Action( "GetAllShortShirts","Shirt")'">Short Shirts</button>
    <button class="my_btn" onclick="location.href = '@Url.Action( "GetAllLongShirts","Shirt")'">Long Shirts</button>
    <button class="my_btn" onclick="location.href = '@Url.Action( "GetAllDryFitShirts","Shirt")'">Dry Fit Shirts</button>
    <button class="my_btn" onclick="location.href = '@Url.Action( "GetAllSortShirtSortByPrice","Shirt")'">Sort By Price</button>
</div>


<div class="container_toAllPage">
    <section class="card_container">
        @foreach (Cloth item in Model)
        {
            <div class="card">
                <img class="cardCloth_img" src="@item.ClothPicture" />
                <h3>@item.ClothBrand</h3>
                <p>@item.ClothType</p>
                <p>Price <span class="card_price">@item.ClothPrice $</span></p>
            </div>
        }
    </section>
</div>

